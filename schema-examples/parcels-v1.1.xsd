<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" elementFormDefault="qualified"
  vc:minVersion="1.1">
  <xs:element name="parcels">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="parcel">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="contents">
                <xs:annotation>
                  <xs:documentation>Description of the parcel's contents. Must have at least 5 characters.</xs:documentation>
                </xs:annotation>
                <xs:simpleType>
                  <xs:restriction base="xs:string">
                    <xs:minLength value="5"/>
                  </xs:restriction>
                </xs:simpleType>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="weight" type="xs:positiveInteger" use="required">
              <xs:annotation>
                <xs:documentation>Weigth in kg.</xs:documentation>
              </xs:annotation>
            </xs:attribute>
            <xs:attribute name="date" type="xs:date" use="required">
              <xs:annotation>
                <xs:documentation>The date this parcel is ready for shipping.</xs:documentation>
              </xs:annotation>
            </xs:attribute>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="max-weight" type="xs:positiveInteger" use="required">
        <xs:annotation>
          <xs:documentation>Maximum weigth of all parcels in kg.</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="delivery-date" type="xs:date" use="required">
        <xs:annotation>
          <xs:documentation>The final delivery date of all parcels. Must be at least 10 days after the shipping dates for the individual parcels.</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:assert test="sum(parcel/@weight) le xs:double(@max-weight)"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
